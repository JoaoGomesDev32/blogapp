<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <div class="d-flex gap-2">
                <a href="/admin/postagens/edit/{{id}}"><button class="btn btn-primary">Editar</button></a>
                <form action="/admin/postagens/deletar" method="POST">
                    <input type="hidden" name="id" value="{{id}}">
                    <a href="#" class="btn btn-danger" onclick="confirmDelete('{{id}}', '/admin/postagens/deletar')">Deletar</a>
                </form>
            </div> 
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}