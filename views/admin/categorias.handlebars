<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-5">
        <div class="card-body">
            <h5 class="card-title">{{nome}}</h5>
            <p class="card-text">Slug: {{slug}}</p>
            <p>Data de criação: {{date}}</p>
            <div class="d-flex gap-2">
                <a href="/admin/categorias/edit/{{id}}"><button class="btn btn-primary">Editar</button></a>
                <form action="/admin/categorias/deletar" method="POST">
                    <input type="hidden" name="id" value="{{id}}">
                    <a href="#" class="btn btn-danger" onclick="confirmDelete('{{id}}', '/admin/categorias/deletar')">Deletar</a>
                </form>
            </div>
        </div>
    </div>
{{else}}
    <div class="alert alert-info mt-3">Nenhuma categoria cadastrada</div>
{{/each}}